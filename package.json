{
  "name": "llm-helper-vscode",
  "displayName": "LLM Helper VSCode",
  "description": "Tool to help integrate local llms into vscode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-helper.llm_refactor",
        "title": "LLM Refactor"
      },
      {
        "command": "llm-helper.llm_description2code",
        "title": "LLM Description 2 Code"
      },
      {
        "command": "llm-helper.chat",
        "title": "LLM Chat"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --loader:.node=file",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "dependencies": {
    "@llama-node/llama-cpp": "^0.1.0",
    "@vscode/vsce": "^2.18.0",
    "llama-node": "^0.1.0",
    "toml": "^3.0.0",
    "vsce": "^2.15.0"
  },
  "devDependencies": {
    "esbuild": "^0.17.18"
  }
}
